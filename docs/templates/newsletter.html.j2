  <script>
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('img').forEach(img => {
      if (!img.hasAttribute('loading')) img.setAttribute('loading', 'lazy');
      if (!img.hasAttribute('decoding')) img.setAttribute('decoding', 'async');
      img.style.aspectRatio = img.style.aspectRatio || '16/9';
      img.style.objectFit = img.style.objectFit || 'cover';
      if (!img.getAttribute('onerror')) {
        img.setAttribute('onerror', "this.closest('figure')?.remove()");
      }
    });
  });

  // LSN Subscribe modal script
  (()=> {
    const modal = document.getElementById('lsn-subscribe-modal');
    const fab   = document.querySelector('.lsn-subscribe-fab');
    const closeBtn = document.getElementById('lsn-close-btn');

    if (modal){ modal.hidden = true; modal.removeAttribute('open'); }

    function openSubModal(){
      modal.hidden = false;
      requestAnimationFrame(()=>{ modal.setAttribute('open',''); document.documentElement.classList.add('lsn-no-scroll'); });
    }
    function closeSubModal(){
      modal.removeAttribute('open');
      setTimeout(()=>{ modal.hidden = true; document.documentElement.classList.remove('lsn-no-scroll'); }, 150);
    }
    window.openSubModal = openSubModal; window.closeSubModal = closeSubModal;

    // Ïä§ÌÅ¨Î°§ Í∏∞Î∞ò FAB ÌôïÏû• Í∏∞Îä•
    function handleFabExpansion() {
      if (!fab) return;
      
      const scrollPercent = (window.scrollY / (document.documentElement.scrollHeight - window.innerHeight)) * 100;
      
      // ÌéòÏù¥ÏßÄÏùò 70% Ïù¥ÏÉÅ Ïä§ÌÅ¨Î°§ÌïòÎ©¥ ÌôïÏû•
      if (scrollPercent > 70) {
        fab.classList.add('expanded');
      } else {
        fab.classList.remove('expanded');
      }
    }

    document.addEventListener('DOMContentLoaded', ()=>{
      fab?.addEventListener('click', (e)=>{ e.preventDefault(); openSubModal(); }, {passive:true});
      closeBtn?.addEventListener('click', (e)=>{ e.preventDefault(); e.stopPropagation(); closeSubModal(); }, {passive:true});
      modal?.addEventListener('click', (e)=>{ if (e.target === modal) closeSubModal(); });
      document.addEventListener('keydown', (e)=>{ if (e.key === 'Escape' && !modal.hidden) closeSubModal(); });
      
      // Ïä§ÌÅ¨Î°§ Ïù¥Î≤§Ìä∏ Î¶¨Ïä§ÎÑà Ï∂îÍ∞Ä (throttled)
      let scrollTimeout;
      window.addEventListener('scroll', () => {
        if (scrollTimeout) clearTimeout(scrollTimeout);
        scrollTimeout = setTimeout(handleFabExpansion, 10);
      }, { passive: true });
      
      // Ï¥àÍ∏∞ ÏÉÅÌÉú ÏÑ§Ï†ï
      handleFabExpansion();

      // ÏûêÎèô Ïò§Ìîà Í∏àÏßÄ(ÌïÑÏöîÏãú ?subscribe=1 ÏóêÏÑúÎßå)
      const q = new URLSearchParams(location.search);
      if (q.get('subscribe') === '1') openSubModal();
    });
